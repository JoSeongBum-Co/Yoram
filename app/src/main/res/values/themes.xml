<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Yoram" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:screenOrientation">landscape</item>
    </style>

    <style name="Theme.Yoram" parent="Base.Theme.Yoram" />

    <!-- Logo title -->
    <style name="yoram">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#A8D5A7</item>
        <item name="fontFamily">@font/paytoneone</item>
    </style>

    <style name="explain_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/jejumyeongjo</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="button_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/jejumyeongjo</item>
    </style>



    <!-- 버튼 스타일 -->
    <style name="BlackButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:radius">8dp</item>
        <!-- Add more attributes as needed -->
    </style>
    <style name="SkyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">#50bcdf</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">8dp</item>

    </style>

    <style name="DayButtonStyle">
        <item name="android:background">@drawable/day_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

</resources>