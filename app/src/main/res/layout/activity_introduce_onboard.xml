<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroduceOnboard"
    android:orientation="vertical">
    <TextView
        android:id="@+id/yoram2"
        android:layout_width="149dp"
        android:layout_height="74dp"

        android:layout_marginTop="79dp"
        android:text="@string/title"
        android:textAppearance="@style/yoram"
        android:lineSpacingExtra="-6sp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        />

    <TextView

        android:id="@+id/introduce_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/introduce_String1"
        android:textAppearance="@style/explain_text"
        android:layout_gravity="center"
        />
    <TextView

        android:id="@+id/introduce_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/introduce_String2"
        android:textAppearance="@style/explain_text"
        android:layout_gravity="center"
        />
    <TextView

        android:id="@+id/introduce_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/introduce_String3"
        android:textAppearance="@style/explain_text"
        android:layout_gravity="center"
        />

    <android.widget.Button
        android:id="@+id/start_button"
        style="@style/BlackButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="150dp"
        android:text="@string/Button_title"
        android:textAppearance="@style/button_text"

        />
    <!--
    Font family: JejuMyeongjo
    Line height: 50sp
    translationY compensates for the line height adjustment of text
    -->

    <!-- styles.xml -->











</LinearLayout>