<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/yoramHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".YoramHome">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="HOME"
            android:textAppearance="@style/yoram" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="@string/main_home_text1"
            android:textAppearance="@style/explain_text"
            android:textSize="20dp" />

        <!-- TimePicker to set the time -->
        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:timePickerMode="spinner" />

        <!-- ToggleButtons for selecting days of the week -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <android.widget.Button
                android:id="@+id/Mon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:background="@drawable/day_button"
                android:textColor="@color/white"
                android:text="월" />

            <android.widget.Button
                android:id="@+id/Tue"
                android:layout_margin="4dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/day_button"
                android:textColor="@color/white"
                android:text="화" />

            <android.widget.Button
                android:id="@+id/Wed"
                android:layout_margin="4dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/day_button"
                android:textColor="@color/white"
                android:text="수" />

            <android.widget.Button
                android:id="@+id/Thu"
                android:layout_margin="4dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/day_button"
                android:textColor="@color/white"
                android:text="목" />

            <android.widget.Button
                android:id="@+id/Fri"
                android:layout_margin="4dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:textColor="@color/white"
                android:background="@drawable/day_button"
                android:text="금" />

            <android.widget.Button
                android:id="@+id/Sat"
                android:layout_margin="4dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/day_button"
                android:textColor="@color/white"
                android:text="토" />

            <android.widget.Button
                android:id="@+id/Sun"
                android:layout_margin="4dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/day_button"
                android:textColor="@color/white"
                android:text="일" />

        </LinearLayout>

        <android.widget.Button
            android:id="@+id/buttonSetyoga"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_button"
            android:text="요가 동작 선택"
            android:textAppearance="@style/explain_text"
            android:textSize="30dp" />


    </LinearLayout>

</FrameLayout>